<!DOCTYPE html>
<html>

<head>
    <title>All Users</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 1rem;
            background: #f0f8ff;
        }

        h1 {
            text-align: center;
            color: #2c3e50;
        }

        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            background: #ffffff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        th {
            background-color: #3498db;
            color: white;
        }

        th,
        td {
            padding: 12px;
            border: 1px solid #ccc;
            text-align: center;
        }

        tr:nth-child(even) {
            background-color: #ecf0f1;
        }

        tr:hover {
            background-color: #d0e6f7;
        }

        .back-link {
            text-align: center;
            margin-top: 20px;
        }

        .back-link a {
            text-decoration: none;
            color: white;
            background-color: #3498db;
            padding: 10px 20px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .back-link a:hover {
            background-color: #2980b9;
        }

        .no-users {
            text-align: center;
            color: #e74c3c;
            font-size: 18px;
            margin-top: 30px;
        }
    </style>
</head>

<body>
    <h1>All Registered Users</h1>
    <% if (users.length===0) { %>
        <p class="no-users">No users found.</p>
        <% } else { %>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Age</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user=> { %>
                        <tr>
                            <td>
                                <%= user.firstName %>
                                    <%= user.lastName %>
                            </td>
                            <td>
                                <%= user.gmail %>
                            </td>
                            <td>
                                <%= user.age %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <% } %>

                <div class="back-link">
                    <a href="/">Back to Home</a>
                </div>
</body>

</html>